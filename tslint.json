{
  "extends": [
    "tslint-config-airbnb",
    "tslint-immutable",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "import-name": [
      {
        "react-moment": "Moment",
        "object-dig": "dig"
      }
    ],
    "prettier": true,
    "no-use-before-declare": true,

    // Immutability rules
    "no-var-keyword": true,
    "no-parameter-reassignment": true,
    "typedef": [true, "call-signature"],
    "readonly-keyword": true,
    // "readonly-array": true,
    "no-let": true,
    "no-object-mutation": true
  }
}
